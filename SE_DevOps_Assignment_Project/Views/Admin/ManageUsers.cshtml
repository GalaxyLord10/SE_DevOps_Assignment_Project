@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>

@{
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
    var alert = TempData["Alert"] != null ? TempData["Alert"].ToString().ToLower() : "";
}

<h2>Manage Users</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@alert alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="AdminDelete" asp-route-id="@user.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>